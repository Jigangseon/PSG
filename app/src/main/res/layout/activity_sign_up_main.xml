<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="54dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sign_up_main_info_text1"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/shop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sign_up_main_info_text2"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:background="@drawable/rounded_button1"
        android:id="@+id/sign_in_button"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="90dp"
        android:layout_width="match_parent"
        android:onClick="signIn"
        android:paddingVertical="18dp"
        android:text="@string/sign_up_main_sign_up_button_text"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <Button
        android:background="@drawable/rounded_button2"
        android:id="@+id/sign_up_button"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:onClick="signUp"
        android:paddingVertical="18dp"
        android:text="@string/sign_up_main_sign_in_button_text"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/guest_in_button"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:onClick="guestIn"
        android:text="@string/sign_up_main_sign_in_guest_text" />

</LinearLayout>